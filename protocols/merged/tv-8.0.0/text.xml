<?xml version="1.0" encoding="UTF-8"?>
<protocol name="text">
  <interface name="text_model" version="1">
    <request name="set_surrounding_text">
      <arg name="text" type="string"/>
      <arg name="cursor" type="uint"/>
      <arg name="anchor" type="uint"/>
    </request>
    <request name="activate">
      <arg name="serial" type="uint"/>
      <arg name="seat" type="object" interface="wl_seat"/>
      <arg name="surface" type="object" interface="wl_surface"/>
    </request>
    <request name="deactivate">
      <arg name="seat" type="object" interface="wl_seat"/>
    </request>
    <request name="reset">
      <arg name="serial" type="uint"/>
    </request>
    <request name="set_cursor_rectangle">
      <arg name="x" type="int"/>
      <arg name="y" type="int"/>
      <arg name="width" type="int"/>
      <arg name="height" type="int"/>
    </request>
    <request name="set_content_type">
      <arg name="hint" type="uint"/>
      <arg name="purpose" type="uint"/>
    </request>
    <request name="set_enter_key_type">
      <arg name="enter_key_type" type="uint"/>
    </request>
    <request name="invoke_action">
      <arg name="button" type="uint"/>
      <arg name="index" type="uint"/>
    </request>
    <request name="commit">
    </request>
    <request name="set_max_text_length">
      <arg name="length" type="uint"/>
    </request>
    <request name="set_platform_data">
      <arg name="text" type="string"/>
    </request>
    <request name="show_input_panel">
    </request>
    <request name="hide_input_panel">
    </request>
    <request name="set_input_panel_rect">
      <arg name="x" type="int"/>
      <arg name="y" type="int"/>
      <arg name="width" type="uint"/>
      <arg name="height" type="uint"/>
    </request>
    <request name="reset_input_panel_rect">
    </request>
    <event name="commit_string">
      <arg name="serial" type="uint"/>
      <arg name="text" type="string"/>
    </event>
    <event name="preedit_string">
      <arg name="serial" type="uint"/>
      <arg name="text" type="string"/>
      <arg name="commit" type="string"/>
    </event>
    <event name="delete_surrounding_text">
      <arg name="serial" type="uint"/>
      <arg name="index" type="int"/>
      <arg name="length" type="uint"/>
    </event>
    <event name="cursor_position">
      <arg name="serial" type="uint"/>
      <arg name="index" type="int"/>
      <arg name="anchor" type="int"/>
    </event>
    <event name="preedit_styling">
      <arg name="serial" type="uint"/>
      <arg name="index" type="uint"/>
      <arg name="length" type="uint"/>
      <arg name="style" type="uint"/>
    </event>
    <event name="preedit_cursor">
      <arg name="serial" type="uint"/>
      <arg name="index" type="int"/>
    </event>
    <event name="modifiers_map">
      <arg name="map" type="array"/>
    </event>
    <event name="keysym">
      <arg name="serial" type="uint"/>
      <arg name="time" type="uint"/>
      <arg name="sym" type="uint"/>
      <arg name="state" type="uint"/>
      <arg name="modifiers" type="uint"/>
    </event>
    <event name="enter">
      <arg name="surface" type="object" interface="wl_surface"/>
    </event>
    <event name="leave">
    </event>
    <event name="input_panel_state">
      <arg name="state" type="uint"/>
    </event>
    <event name="input_panel_rect">
      <arg name="x" type="int"/>
      <arg name="y" type="int"/>
      <arg name="width" type="uint"/>
      <arg name="height" type="uint"/>
    </event>
  </interface>
  <interface name="text_model_factory" version="1">
    <request name="create_text_model">
      <arg name="id" type="new_id" interface="text_model"/>
    </request>
  </interface>
</protocol>
